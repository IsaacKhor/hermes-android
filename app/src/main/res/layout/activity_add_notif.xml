<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.viewAddNotif.AddNotifActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/add_label_title"
                android:text="@string/label_title"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/add_edit_title"
                android:layout_below="@id/add_label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/add_label_content"
                android:layout_below="@id/add_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/content_text"
                android:text="@string/label_content"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/add_edit_content"
                android:layout_below="@id/add_label_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/add_label_targets"
                android:layout_below="@id/add_edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_targets"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <TextView
                android:id="@+id/add_edit_targets"
                android:layout_below="@id/add_label_targets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/add_label_topics"
                android:layout_below="@id/add_edit_targets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_topics"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <TextView
                android:id="@+id/add_edit_topics"
                android:layout_below="@id/add_label_topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/add_btn_taget_group"
                android:layout_below="@id/add_edit_topics"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_target_topic" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
